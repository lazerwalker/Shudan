{
  "name": "shindan",
  "version": "0.0.1",
  "description": "A highly customizable, low-level React Goban component.",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js"
    },
    "./css/*": "./css/*"
  },
  "files": [
    "dist",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lazerwalker/Shindan.git"
  },
  "keywords": [
    "go",
    "weiqi",
    "baduk",
    "goban",
    "boardgame",
    "ui",
    "component",
    "react"
  ],
  "author": "Yichuan Shen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lazerwalker/Shindan/issues"
  },
  "homepage": "https://github.com/lazerwalker/Shindan",
  "dependencies": {
    "classnames": "^2.3.1"
  },
  "devDependencies": {
    "@sabaki/go-board": "^1.4.2",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.0.0",
    "onchange": "^7.1.0",
    "prettier": "^2.7.1",
    "typescript": "^5.7.0",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "prettier": {
    "proseWrap": "always"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "build-demo": "webpack --entry ./demo/main.js -o ./demo --output-filename bundle.js --progress --mode production",
    "watch-demo": "webpack --entry ./demo/main.js -o ./demo --output-filename bundle.js --progress --mode development --watch",
    "format": "prettier \"**/*.{js,ts,tsx,html,md}\" --write",
    "format-watch": "onchange \"**/*.{js,ts,tsx,html,md}\" -- prettier --write {{changed}}"
  }
}
